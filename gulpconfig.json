{
  "browserSyncOptions": {
    "proxy": "localhost:8080/",
    "notify": false
  },
  "browserSyncWatchFiles": [
    "./assets/css/*.min.css", 
    "./assets/js/*.min.js",
    "./**/*.svg",
    "./**/*.html"
  ],
  "paths": {
    "js": "./assets/js",
    "css": "./assets/css",
    "img": "./assets/images",
    "imgsrc": "./src/img",
    "sass": "./assets/sass",
    "node": "./node_modules/",
    "bower": "./bower_components/",
    "dev": "./src",
    "dist": "./dist",
    "distprod": "./dist-product",
    "vendor": ""
  }
}
